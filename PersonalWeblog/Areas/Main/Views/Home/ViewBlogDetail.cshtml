@model Application_Contracts.Application_Blog.BlogViewModel
@{
    ViewData["Title"] = "Blog Details";
    Layout = "~/Areas/Main/Views/Shared/_Layout.cshtml";
}
<div class="col-md-9">
    <div class="col-md-12">
        <div class="single-content">
            <div class="single-img">
                <img src="~/@Model.ImageAddress" alt="@Model.AltText">
            </div>
            <div class="single-title">
                <h1>@Model.BlogTitle</h1>
            </div>
            <p>@Model.BlogBody</p>
            <hr>
            <div class="comment">
                <span><i class="fa fa-comments"></i>نظری برای این مطلب بنویسید</span>
                <form action="AddComment" method="post">
                    <div class="form-group col-md-6">
                        <input class="form-control" type="text" name="Fullname" id="Fullname" placeholder="نام خود را وارد کنید">
                    </div>
                    <div class="form-group col-md-6">
                        <input class="form-control" type="email" name="Email" id="Email" placeholder="ایمیل را واردکنید">
                    </div>
                    <div class="form-group col-md-12">
                        <textarea class="form-control" name="Content" id="Content" placeholder="متن نظر" rows="7"></textarea>
                    </div>
                    <div class="form-group col-md-12">
                        <button class="btn btn-default" type="submit">ارسال نظر</button>
                    </div>
                    <input type="hidden" name="blogId" value="@Model.Id" id="blogId" />
                </form>
            </div>
            <div class="comments-note">
                نظرات این مطلب
            </div>
        </div>
    </div>
</div>
<br>
<br>