@model List<Application_Contracts.Application_Blog.BlogViewModel>
@if (Model.Count != 0)
{
    @foreach (var blog in Model)
    {
        <div class="col-md-4">
            <a asp-controller="Home" asp-action="ViewBlogDetail" asp-route-blogId="@blog.Id">
                <div class="post-content">
                    <figure>
                        <img src="~/@blog.ImageAddress" alt="@blog.AltText">
                        <figcaption class="hover-fig">
                            <i class="fa fa-plus"></i>
                        </figcaption>
                        <figcaption class="date-fig">
                            <span>@blog.CreationDate</span>
                            <i class="fa fa-date"></i>
                        </figcaption>
                    </figure>
                    <p>@blog.BlogDescrioption</p>
                    <a href="@Url.Action("ArticleDownload","Home",new{area ="Main" , blogId = blog.Id})">دانلود</a>
                </div>
            </a>
        </div>
    }
}

